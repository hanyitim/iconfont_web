{
    "parser": "babel-eslint",
    "plugins": [
        "react"
    ],
    "env": {
        "browser": true,
        "node": true,
        "jasmine": true,
        "es6":true
    },
    "rules": {
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "always"
        ],
        "no-console": 0,
        "template-curly-spacing" : "off",
        "indent" : "off",
        "no-debugger":0
    },
    "extends": ["eslint:recommended", "plugin:react/recommended"]
}